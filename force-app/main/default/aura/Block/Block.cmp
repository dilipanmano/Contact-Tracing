<aura:component>
    <aura:attribute name="open" type="Boolean" default="false" />
    <aura:attribute name="label" type="String" />

    <aura:registerEvent name="blockClick" type="c:BlockClickEvent" />

    <div class="blockProps slds-align--absolute-center slds-var-m-around_medium slds-var-p-around_medium" onclick="{!c.blockClickHandler}">
        <aura:if isTrue="{!v.open}">
            <div>{!v.label}</div>
        </aura:if>
    </div>
</aura:component>
